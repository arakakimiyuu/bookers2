<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h1>User</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





