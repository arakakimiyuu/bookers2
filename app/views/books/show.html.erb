
<div class="container px-5 px-sm-0">
 <div class="row">

  <%= render 'list', user: @user, book: @newbook %>
   <div class="col-md-8 offset-md-1">

    <h2>Book detail</h2>
    <table class="table">
       <tbody>
         <tr>
          <td>
           <%= link_to  user_path(@user) do %>
            <%= image_tag @book.user.get_profile_image %>
           <% end %>
           <p><%= link_to  @book.user.name, user_path(@user) %></p>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <td>
           <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
           <% end %>
          <td>
           <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-sm btn-danger" %>
           <% end %>
           </td>
          <td>
            <% if @book.favorited_by?(current_user) %>
               <%= link_to book_favorites_path(@book.id), method: :delete do %>
                 <span style="color:red;">❤︎</span>
                 <%= @book.favorites.count %>
               <% end %>
            <% else %>
               <%= link_to book_favorites_path(@book.id), method: :post do %>
                 <span style="color:blue;">❤︎</span>
                 <%= @book.favorites.count %>
               <% end %>
            <% end %>
          </td>
         </tr>
       </tbody>
    </table>
     <table>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
             <td>
              <%= link_to (book_comment.user) do %>
               <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
               <div><%= book_comment.user.name %></div>
              <% end %>
             </td>
             <td>
              <%= book_comment.comment %>
             </td>
             <td>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
             </td>
          </tr>
          <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @newcomment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control book_title" %>
          <p><%= f.submit "送信" %></p>
        <% end %>
      </div>
   </div>
 </div>
</div>

